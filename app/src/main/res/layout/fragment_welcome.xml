<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.welcome_screen.WelcomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/welcomeTextView"
                style="@style/my_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text_view"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/click_the_button_to_continue"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_navigate_to_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to instructions" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
